<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Padding="5" Margin="5">Размерность матрицы:</TextBlock>
                <TextBox Padding="5" Margin="5" Text="{Binding Path=Size}"></TextBox>
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="1" Padding="5,2,5,2" Margin="0,5,10,5" HorizontalAlignment="Right" Click="Go">Поехали!</Button>
    </Grid>
</Window>
